# Database Configuration
DATABASE_URL=postgresql://sentinel:your-secure-password@localhost:5432/sentinel

# Notion Configuration
NOTION_API_KEY=ntn_xxxxxxxxxxxxxxxxxxxxx
NOTION_WORKSPACE_ID=your-workspace-id
NOTION_WORKSPACE_NAME=your-workspace-name

# Claude/Anthropic API (Required for agent functionality)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# OpenTelemetry Configuration (Observability)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=sentinel

# Server Configuration
# Use 127.0.0.1 for local development (secure default)
# Use 0.0.0.0 only in production with proper firewall/network policies
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# Production Configuration (for deployment)
DOMAIN=sentinel.troyneff.com
SSL_EMAIL=troy@example.com
ENVIRONMENT=development

# Security
SECRET_KEY=generate-random-secret-here
ADMIN_PASSWORD=generate-strong-password

# Optional: AWS RDS (if using cloud database instead of local)
# DATABASE_URL=postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/sentinel
